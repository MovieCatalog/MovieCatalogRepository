<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="70dp" >

    <!-- Movie element Image. -->

    <ImageView
        android:id="@+id/relative_layout_image_view"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="@dimen/relative_margin"
        android:contentDescription="@string/detail_page_image_description" >
    </ImageView>

    <!-- Movie element Title. -->

    <TextView
        android:id="@+id/relative_layout_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/relative_layout_image_view"
        android:gravity="center"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="@dimen/relative_title_text_size" >
    </TextView>

    <!-- Movie element Description. -->

    <TextView
        android:id="@+id/relative_layout_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_layout_title"
        android:layout_toRightOf="@id/relative_layout_image_view"
        android:maxLines="4"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/relative_desc_text_size" >
    </TextView>

</RelativeLayout>